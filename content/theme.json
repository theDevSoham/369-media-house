{
  "meta": {
    "name": "Default Theme",
    "version": "1.0.0",
    "supportsDark": true,
    "defaultMode": "light"
  },

  "modes": {
    "light": {
      "colors": {
        "brand": {
          "primary": "#000",
          "primaryHover": "#000",
          "primaryActive": "#808080",
          "secondary": "#22c55e"
        },

        "background": {
          "page": "#ffffff",
          "surface": "#B3B3B3",
          "card": "#ffffff",
          "overlay": "rgba(0,0,0,0.5)"
        },

        "text": {
          "primary": "#020617",
          "secondary": "#475569",
          "muted": "#64748b",
          "inverse": "#ffffff"
        },

        "border": {
          "default": "#808080",
          "focus": "#000000"
        },

        "state": {
          "success": "#22c55e",
          "error": "#ef4444"
        }
      }
    },

    "dark": {
      "colors": {
        "brand": {
          "primary": "#818cf8",
          "primaryHover": "#6366f1",
          "primaryActive": "#4f46e5",
          "secondary": "#4ade80"
        },

        "background": {
          "page": "#020617",
          "surface": "#020617",
          "card": "#020617",
          "overlay": "rgba(0,0,0,0.7)"
        },

        "text": {
          "primary": "#e5e7eb",
          "secondary": "#94a3b8",
          "muted": "#64748b",
          "inverse": "#020617"
        },

        "border": {
          "default": "#1e293b",
          "focus": "#818cf8"
        },

        "state": {
          "success": "#22c55e",
          "error": "#f87171"
        }
      }
    }
  },

  "typography": {
    "fontFamily": {
      "sans": "Inter, system-ui",
      "mono": "JetBrains Mono, monospace"
    },
    "fontSize": {
      "base": "1rem",
      "xl": "1.25rem"
    }
  },

  "radius": {
    "md": "1rem",
    "lg": "2rem"
  }
}
